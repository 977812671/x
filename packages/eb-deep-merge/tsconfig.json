{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es2017",
      "es2016",
      "es2015"
    ],
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./",
    "strict": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "jest",
      "reflect-metadata"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}

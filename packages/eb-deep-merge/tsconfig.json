{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es2017",
      "es2016",
      "es2015"
    ],
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}

{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist/cjs",
    "declaration": true,
    "declarationDir": "./types",
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "strict": true,
    "types": [
      "jest",
      "reflect-metadata",
      "node"
    ],
    "lib": [
      "dom",
      "esnext"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "**/__mocks__/**/*",
    "**/__fixtures__/**/*",
    "**/__tests__/**/*",
    "node_modules"
  ]
}
